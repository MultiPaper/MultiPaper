                     do {
                         completablefuture = playerchunk.getChunkToSave();
                         BlockableEventLoop iasynctaskhandler = this.mainThreadExecutor;
 
                         Objects.requireNonNull(completablefuture);
-                        iasynctaskhandler.managedBlock(completablefuture::isDone);
