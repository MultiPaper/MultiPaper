+
+                ((CraftScheduler) Bukkit.getScheduler()).scheduleInternalTask(() -> {
+                    handleLater(connection, depth + 1);
+                }, 1, "EntityUpdatePacket-handleLaters");
+                return;
+            }
+
+            MultiPaperEntitiesHandler.handleEntityUpdate(entity, packet);
+        }
+    }
