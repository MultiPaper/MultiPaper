+        removedEntities.put(uuid, reason);
+        ((CraftScheduler) Bukkit.getScheduler()).scheduleInternalTask(() -> {
+            removedEntities.remove(uuid, reason);
+        }, durationInTicks, "EntityRemovePacket-removeEntryFromRemovedEntities");
+    }
