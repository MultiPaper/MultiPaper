+                sendChunkLater(connection, world, cx, cz, depth + 1);
+            }, 1, "ExternalServerConnection-sendEntitiesLater");
+        } else {
+            connection.send(new SendEntitiesPacket(level, new ChunkPos(cx, cz)));
+        }
+    }
