+        HashSet<Player> moved = new HashSet<>();
+
+        for (Player player : Bukkit.getOnlinePlayers()) {
+            if (moved.contains(player)) {
+                continue;
+            }
+
+            String server = randomServer();
+
+            if (server == null) {
+                LOGGER.info("No other servers are online, disconnecting players instead");
